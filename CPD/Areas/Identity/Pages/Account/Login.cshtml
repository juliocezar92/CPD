@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<body>
    <h1 style="text-align:center;margin-top: 80px">@ViewData["Title"]</h1>
    <div class="row" style="display:flex; justify-content:center">
        <div class="col-md-4">

            <form id="account" method="post" style="text-align:center; ">
                <h4>Seja bem-Vindo!</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logar</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                    </p>
                    @*<p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>*@
                    @*<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>

        </div>
        @*<div class="col-md-6 col-md-offset-2">
        <section>
        <img src="c:\users\julio\source\repos\cpd\cpd\img\imglogin.png" />
        </section>
        </div>*@
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensagemSucesso"]
        </div>
        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("Index", "Home")';
            }, 3000); // 3000 milissegundos = 3 segundos
        </script>
    }
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>