@model CPD.Dominio.Entidades.Contribuicao

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Contribuição de dizmo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorLiquido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorLiquido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataContribuicao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataContribuicao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoContribuicao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoContribuicao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
