@model CPD.Dominio.Entidades.Contribuicao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Contribuição de dizmo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorLiquido" class="control-label"></label>
                <input asp-for="ValorLiquido" class="form-control" />
                <span asp-validation-for="ValorLiquido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataContribuicao" class="control-label"></label>
                <input asp-for="DataContribuicao" class="form-control" />
                <span asp-validation-for="DataContribuicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoContribuicao" class="control-label"></label>
                <select asp-for="TipoContribuicao" class="form-control"></select>
                <span asp-validation-for="TipoContribuicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
